<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mrz.multiscreen">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MultiScreen">
        <activity android:name=".Argentina">Argentina</activity>
        <activity android:name=".Brasilia">Brasilia</activity>
        <activity android:name=".Columbia">Columbia</activity>
        <activity android:name=".Chili">Chili</activity>
        <activity android:name=".Uruguay">Uruguay</activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>